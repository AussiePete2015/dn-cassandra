[Unit]
Description=Apache Cassandra
Documentation=http://cassandra.apache.org/doc/latest/
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Type=simple
PIDFile=/var/run/cassandra/cassandra.pid
WorkingDirectory={{cassandra_home_dir}}
User=cassandra
Group=cassandra
ExecStart={{cassandra_home_dir}}/bin/cassandra -p /var/run/cassandra/cassandra.pid

# When Cassandra stops, it may exit with status 2 - see https://issues.apache.org/jira/browse/CASSANDRA-13030
# Note that it can still be started again without any issues
ExecStop={{cassandra_home_dir}}/bin/nodetool stopdaemon

StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target